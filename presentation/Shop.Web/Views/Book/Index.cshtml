@model Shop.Book

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p><strong>@Model.Author</strong></p>
<p>@Model.Description</p>
<p>Цена <strong>@Model.Price</strong></p>
<form asp-controller="Order" asp-action="Add" method="post">   	
    <input type="number" value="1" min="1" max="50" step="1" name="count"/>
    <input type="hidden" name="id" value="@Model.Id"/>
    <button class="btn btn-outline-success" type="submit">Добавить</button>
</form>